{
  "name": "screenshot-crawler-server",
  "version": "1.0.0",
  "description": "Backend server for screenshot crawler",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "puppeteer": "^21.6.1",
    "csv-writer": "^1.6.0",
    "archiver": "^7.0.1",
    "xml2js": "^0.6.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/multer": "^1.4.11",
    "@types/cors": "^2.8.17",
    "@types/archiver": "^6.0.2",
    "@types/xml2js": "^0.4.14",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  }
}
